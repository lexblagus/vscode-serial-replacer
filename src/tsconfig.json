{
  "compilerOptions": {
    "composite": true,
    "rootDir": ".",
    "baseUrl": ".",
    "outDir": "../out",
    "paths": {
      "shared/*": [
        "../shared/*"
      ]
    },
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "es6",
      "dom"
    ],
    "sourceMap": true,
    "resolveJsonModule": true,
    "declaration": true,
    "esModuleInterop": true
  },
  "include": [
    "**/*",
    "**/*.json"
  ],
  "references": [
    { "path": "../shared" }
  ]
}

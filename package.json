{
  "name": "serial-replacer",
  "publisher": "blagus",
  "displayName": "Serial Replacer",
  "description": "Visual Studio extension for consecutive (batch) find-and-replace in a single or multiple files",
  "version": "0.0.6",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "repository": "ttps://github.com/lexblagus/vscode-serial-replacer",
  "license": "CC-BY-NC-SA-4.0",
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "serialReplacerEditorView": [
        {
          "id": "serialReplacer.editorView",
          "name": "%views.serialReplacerEditorView.name%",
          "type": "webview",
          "icon": "$(replace-all)"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "serialReplacerEditorView",
          "title": "%SerialReplacer%",
          "icon": "$(replace-all)"
        }
      ]
    },
    "commands": [
      {
        "command": "serial-replacer.newPanel",
        "title": "%commands.newPanel.title%"
      }
    ],
    "configuration": {
      "title": "%SerialReplacer%",
      "type": "object",
      "properties": {
        "serialReplacerConfig.logOutputPanel.LogLevel": {
          "title": "%configuration.logOutputPanel.LogLevel.title%",
          "markdownDescription": "%configuration.logOutputPanel.LogLevel.mdDescription%",
          "order": 10,
          "type": "string",
          "default": "warn",
          "enum": [
            "silent",
            "fatal",
            "error",
            "warn",
            "info",
            "debug",
            "trace"
          ],
          "enumDescriptions": [
            "%configuration.logOutputPanel.LogLevel.enumDescriptions.silent%",
            "%configuration.logOutputPanel.LogLevel.enumDescriptions.fatal%",
            "%configuration.logOutputPanel.LogLevel.enumDescriptions.error%",
            "%configuration.logOutputPanel.LogLevel.enumDescriptions.warn%",
            "%configuration.logOutputPanel.LogLevel.enumDescriptions.info%",
            "%configuration.logOutputPanel.LogLevel.enumDescriptions.debug%",
            "%configuration.logOutputPanel.LogLevel.enumDescriptions.trace%"
          ]
        },
        "serialReplacerConfig.logOutputPanel.maximumMessageLength": {
          "title": "%configuration.logOutputPanel.maximumMessageLength.title%",
          "markdownDescription": "%configuration.logOutputPanel.maximumMessageLength.mdDescription%",
          "order": 20,
          "type": "integer",
          "default": 1073741822,
          "minimum": 0
        },
        "serialReplacerConfig.fileFilters.micromatchOptions": {
          "title": "%configuration.fileFilters.micromatchOptions.title%",
          "markdownDescription": "%configuration.fileFilters.micromatchOptions.mdDescription%",
          "order": 30,
          "type": "object",
          "default": {
            "dot": true,
            "nocase": true
          }
        },
        "serialReplacerConfig.fields.historyLimit": {
          "title": "%configuration.fields.historyLimit.title%",
          "markdownDescription": "%configuration.fields.historyLimit.mdDescription%",
          "order": 40,
          "type": "integer",
          "minimum": 1,
          "default": 25
        },
        "serialReplacerConfig.fields.keystrokeDebounceDelay": {
          "title": "%configuration.fields.keystrokeDebounceDelay.title%",
          "markdownDescription": "%configuration.fields.keystrokeDebounceDelay.mdDescription%",
          "order": 50,
          "type": "integer",
          "default": 325
        },
        "serialReplacerConfig.fileTree.expandRecursivellyMaximumSize": {
          "title": "%configuration.fileTree.expandRecursivellyMaximumSize.title%",
          "markdownDescription": "%configuration.fileTree.expandRecursivellyMaximumSize.mdDescription%",
          "order": 60,
          "type": "integer",
          "minimum": 2,
          "default": 10000
        },
        "serialReplacerConfig.devTools.logEnabled": {
          "title": "%configuration.devTools.logEnabled.title%",
          "markdownDescription": "%configuration.devTools.logEnabled.mdDescription%",
          "order": 70,
          "type": "boolean",
          "default": true
        },
        "serialReplacerConfig.devTools.logFilter": {
          "title": "%configuration.devTools.logFilter.title%",
          "markdownDescription": "%configuration.devTools.logFilter.mdDescription%",
          "order": 80,
          "type": "object",
          "default": {
            "allow": [
              {"level": "warn"},
              {"level": "error"}
            ],
            "deny": [
              {
                "title": "useAppContext"
              },
              {
                "level": "log",
                "tag": "hook",
                "title": "useBackendMessages"
              },
              {
                "level": "log",
                "tag": "hook",
                "title": "useStateRefSync"
              }
            ]
          }
        }
      }
    }
  },
  "l10n": "./l10n",
  "scripts": {
    "install:all": "npm install && cd webview-ui && npm install",
    "start:webview": "cd webview-ui && npm run start",
    "build:webview": "cd webview-ui && npm run build",
    "vscode:prepublish": "npm run compile",
    "compile:shared": "tsc -b shared && tsc-alias -p shared/tsconfig.json",
    "compile:src": "tsc -b src && tsc-alias -p src/tsconfig.json",
    "compile": "npm run compile:shared && npm run compile:src",
    "compile:legacy": "tsc -b && tsc-alias",
    "watch": "tsc -b -watch",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "clear": "rm -rf ./out ./webview-ui/build"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/micromatch": "^4.0.9",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.100.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "@vscode/l10n-dev": "^0.0.35",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "prettier": "^2.2.1",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.2",
    "vscode-test": "^1.5.0"
  },
  "dependencies": {
    "micromatch": "^4.0.8",
    "uuid": "^13.0.0"
  }
}

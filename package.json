{
  "name": "serial-replacer",
  "publisher": "lexa-blagus",
  "displayName": "Serial Replacer",
  "description": "Visual Studio extension for consecutive find-and-replace in a single or multiple files",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "serialReplacerEditorView": [
        {
          "id": "serialReplacer.editorView",
          "name": "%views.editor.name%",
          "type": "webview",
          "icon": "$(replace-all)"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "serialReplacerEditorView",
          "title": "%containers.activitybar.title%",
          "icon": "$(replace-all)"
        }
      ]
    },
    "commands": [
      {
        "command": "serial-replacer.newPanel",
        "title": "%commands.newPanel%"
      }
    ]
  },
  "l10n": "./l10n",
  "scripts": {
    "install:all": "npm install && cd webview-ui && npm install",
    "start:webview": "cd webview-ui && npm run start",
    "build:webview": "cd webview-ui && npm run build",
    "vscode:prepublish": "npm run compile",
    "compile:shared": "tsc -b shared && tsc-alias -p shared/tsconfig.json",
    "compile:src": "tsc -b src && tsc-alias -p src/tsconfig.json",
    "compile": "npm run compile:shared && npm run compile:src",
    "compile:legacy": "tsc -b && tsc-alias",
    "watch": "tsc -b -watch",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "clear": "rm -rf ./out ./webview-ui/build"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/micromatch": "^4.0.9",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.100.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "@vscode/l10n-dev": "^0.0.35",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "prettier": "^2.2.1",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.2",
    "vscode-test": "^1.5.0"
  },
  "dependencies": {
    "micromatch": "^4.0.8"
  }
}
